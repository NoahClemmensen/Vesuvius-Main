<script src="https://cdn.plot.ly/plotly-2.27.0.min.js" charset="utf-8"></script>
<script src="/javascripts/adminMonth.js"></script>
<div class="d-flex align-items-center">
    <h1>Daily profit of <%= month %></h1>
    <button class="ms-auto btn btn-success" id="exportButton">Export CSV</button>
</div>

<div class="d-flex justify-content-center" style="gap: 32px;">
    <table class="table">
        <thead>
            <th scope="col">Day</th>
            <th scope="col">Purchase price</th>
            <th scope="col">Retail price</th>
            <th scope="col">Profit</th>
            <th scope="col">Total orders</th>
            <th scope="col">Items sold</th>
        </thead>
        <tbody>
        <% tableData.forEach((item => { %>
            <tr>
                <td><%= item.day %></td>
                <td><%= item.purchase_price %> dkk</td>
                <td><%= item.retail_price %> dkk</td>
                <td><%= item.profit %> dkk</td>
                <td><%= item.total_orders %></td>
                <td><%= item.total_items %></td>
            </tr>
        <% })) %>
        </tbody>
    </table>
    <div id="dailyChartContainer" class="sticky-top" style="width: 1000px; height: 400px;"></div>
</div>